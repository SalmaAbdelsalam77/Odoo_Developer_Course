<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments" class= "header_custom" 
                decoration-success= "state =='done'"
                decoration-info="state == 'draft'"
                decoration-danger="state == 'cancel'"
                decoration-muted="state == 'in_consultation'" sample="1" multi_edit = "1">
                <field name="patient_id" class="text-center" align="center"/>
                <field name="ref" class="text-center" align="center" />
                <field name="gender" class="text-center" align="center"/>
                <field name="appointment_time" class="text-center" align="center"/>
                <field name="booking_date" class="text-center" align="center" optional="hide"/>
                <field name="doctor_id" widget="many2one_avatar_user" />
                <field name="ref" optional="hide"/>
                <field name="gender" optional="hide"/>
                <field name="activity_ids" widget="list_activity"  class="text-center"/>
                <field name="state"
                    decoration-success= "state =='done'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state == 'cancel'"
                    decoration-muted="state == 'in_consultation'"
                    widget="badge"
                    class="text-center" align="center"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" options="{'clickable' :'1'}" statusbar_visible="draft,in_consultation,done" />
                    </header>
                    <div>
                        <h2>
                            <field name="priority" widget= "priority" />
                        </h2>
                    </div>
                    <group>
                        <group >
                            <field name="patient_id"  defult_focus='1'/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="booking_date" help= "Date of booking"/>
                            <field name="doctor_id" widget="many2one_avatar" />
                        </group>
                        <group >
                                <field name="appointment_time"/>
                                    <button name="action_test" string="Object Button" type="object" class="oe_highlight" 
                                    confirm="Are You Sure That You Want To Excute Python Code!" help="A massage will be printed in the log"/>
                                    <button name="%(hospital_management_system.action_hospital_patient)d" string="Action Button" 
                                    type="action" class="oe_highlight" confirm="Are You Sure That You Want To Click On The Button!" 
                                    help="On clicking this you will be directed to the patient records"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="prescription" string="Prescription"  >
                            <!-- <group> -->
                                <field name="prescription" placeholder= "Enter your prescription"      widget="html"
                                    options="{'resizable': true}" />
                            <!-- </group>    -->
                        </page>
                        <page name="pharmacy" string="Pharmacy">
                            <group>
                            </group>   
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type= 'html'>
            <p class="oe_view_nocontent_create">
                Click to create a new appointment.
            </p>
        </field>
    </record>

    <menuitem
    id="menu_appointment"
    name="Appointments"
    action ="action_hospital_appointment"
    parent="menu_appointment_master"
    sequence="10"/>
</odoo>
