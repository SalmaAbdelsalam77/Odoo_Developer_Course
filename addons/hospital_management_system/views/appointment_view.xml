<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_hospital_appointment_list" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments" class= "header_custom" 
                decoration-success= "state =='done'"
                decoration-info="state == 'draft'"
                decoration-danger="state == 'cancel' or (is_late)"
                decoration-muted="state == 'in_consultation'"
                sample="1" multi_edit = "1">
                <field name="patient_id" class="text-center" align="center"/>
                <field name="ref" class="text-center" align="center" />
                <field name="gender" class="text-center" align="center"/>
                <field name="appointment_time" class="text-center" align="center"/>
                <field name="booking_date" class="text-center" align="center" optional="hide"/>
                <field name="is_late" invisible= '1'/>
                <field name="doctor_id" widget="many2one_avatar_user" />
                <field name="ref" optional="hide"/>
                <field name="gender" optional="hide"/>
                <field name="activity_ids" widget="list_activity"  class="text-center"/>
                <field name="state"
                    decoration-success= "state =='done'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state == 'cancel'"
                    decoration-muted="state == 'in_consultation'"
                    widget="badge"
                    class="text-center" align="center"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointments">
                <sheet>
                    <header>
                        <!-- options="{'clickable' :'1'}" -->
                        <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft,in_consultation,done"/>
                        <button name= "action_in_consultation" string= "In Consultation" type="object" invisible ="state not in('draft')"  class="oe_highlight" data-hotkey ="x" />
                        <button name= "action_draft" string= "Rest To Darft" type="object" invisible ="state not in('cancel')" class="oe_highlight" data-hotkey="r" />
                        <button name= "action_done" string= "Mark As Done" type="object" invisible ="state not in('in_consultation')"  class="oe_highlight" data-hotkey="m" />
                        <button name= "action_cancel" string= "Cancel" type="object" invisible ="state not in('draft','in_consultation')"  class="oe_highlight" data-hotkey="h"/>
                    </header>
                    <div>
                        <h2>
                            <field name="priority" widget= "priority" />
                        </h2>
                    </div>
                    <group>
                        <group string="Patient Information" >
                            <field name="patient_id"  defult_focus='1'/>
                            <field name="ref"/>
                            <field name="gender"/>
                            <field name="is_late" invisible='1'/>
                        </group>
                        <group string="Appointment Information">
                            <field name="hide_sales_price" widget="boolean_toggle" groups="base.group_no_one"/>
                            <field name="appointment_time"/>
                            <field name="booking_date" help="Date of booking"/>
                            <field name="doctor_id" widget="many2one_avatar" />
                                    <button name="action_test" string="Object Button" type="object" class="oe_highlight" 
                                    confirm="Are You Sure That You Want To Excute Python Code!" help="A massage will be printed in the log" groups="base.group_no_one"/>
                                    <button name="%(hospital_management_system.action_hospital_patient)d" string="Action Button" 
                                    type="action" class="oe_highlight" confirm="Are You Sure That You Want To Click On The Button!" 
                                    help="On clicking this you will be directed to the patient records" groups="base.group_no_one"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="prescription" string="Prescription">
                            <!-- <group> -->
                                <!-- <field name="" placeholder= "Enter your prescription"  widget="html"
                                    options="{'resizable':true,'codeview':true}" /> -->
                                    <field name="prescription" widget="html_legacy" options="{'codeview': true,'resizable': true}"  style="border: none !important;"/>
                            <!-- </group>    -->
                        </page>
                        <page name="pharmacy" string="Pharmacy">
                            <field name="pharmacy_line_ids">
                                <list editable ="bottom">
                                    <field name="product_id"/>
                                    <field name="price_unit" invisible="parent.hide_sales_price"/>
                                    <field name="quantity"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="quantity"/>                          
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    
    <!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>
