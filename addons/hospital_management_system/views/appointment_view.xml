    <!-- Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type= 'html'>
            <p class="oe_view_nocontent_create">
                Click to create a new appointment.
            </p>
        </field>
    </record>

    <record id="appointmet_cancel_server_action" model="ir.actions.server">
        <field name="name">Cancel</field>
        <field name="model_id" ref="model_hospital_appointment"/>           
        <field name="binding_model_id" ref="model_hospital_appointment"/>   
        <field name="state">code</field>
        <field name="code">
            action = records.action_cancel()
        </field>        
    </record>

    <record id="check_appointment_time_cron" model="ir.cron">
        <field name="name">Appointment: Check appointment time</field>
        <field name="model_id" ref="model_hospital_appointment"/>           
        <field name="state">code</field>
        <field name="code">
            model._check_appointment_time()
        </field>        
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>

    <menuitem
    id="menu_appointment"
    name="Appointments"
    action ="action_hospital_appointment"
    parent="menu_appointment_master"
    sequence="10"/>
</odoo>
